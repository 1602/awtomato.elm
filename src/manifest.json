{
  "name": "Basic Automation",
  "version": "1.0.1",
  "manifest_version": 2,
  "minimum_chrome_version": "10.0",
  "devtools_page": "automation-devtools.html",
  "icons": {
      "128": "assets/tomato.png"
  },
  "background": {
      "scripts": ["background.js"]
  },
  "permissions": [
      "*://*/", "tabs", "storage", "activeTab"
  ],
  "browser_action": {
      "default_icon": {
          "32": "assets/tomato.png"
      }
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content-script.js"]
    }
  ],
  "content_security_policy": "script-src 'self' http://localhost:3000 'unsafe-eval'; object-src 'self'"

}
